{
  "name": "lite-classnames",
  "version": "1.2.0",
  "description": "A lightweight (\"lite\") classnames generation utility function",
  "main": "dist/classnames.js",
  "types": "dist/classnames.d.ts",
  "type": "module",
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "test": "NODE_ENV=test mocha test/*.test.ts",
    "format": "prettier --write .",
    "lint": "npm run lint:eslint && npm run lint:typecheck",
    "lint:eslint": "eslint .",
    "lint:typecheck": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cristobal/lite-classnames.git"
  },
  "keywords": [
    "css",
    "classes",
    "classnames",
    "utility",
    "lite",
    "light"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cristobal/lite-classnames/issues"
  },
  "homepage": "https://github.com/cristobal/lite-classnames#readme",
  "devDependencies": {
    "@types/chai": "5.2.2",
    "@types/mocha": "10.0.10",
    "chai": "5.2.0",
    "eslint": "9.30.1",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-prettier": "5.5.1",
    "eslint-plugin-unicorn": "59.0.1",
    "globals": "16.3.0",
    "mocha": "11.7.1",
    "prettier": "3.6.2",
    "typescript": "5.8.3",
    "typescript-eslint": "8.35.1"
  },
  "prettier": {
    "singleQuote": true
  },
  "files": [
    "dist/*",
    "README.md",
    "LICENSE"
  ]
}
